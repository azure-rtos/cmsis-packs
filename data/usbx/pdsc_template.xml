<?xml version="1.0" encoding="utf-8"?>

<package>

    <!-- common source files directory -->
    <common_dir>../common</common_dir>

    <!-- porting files directory -->
    <ports_dir>../ports</ports_dir>

    <!-- azrtos_module_name -->
    <azrtos_module_name>USBX</azrtos_module_name>

    <!-- supported porting devices -->
    <port_devices>
        <port_device>cortex_a5</port_device>
        <port_device>cortex_a7</port_device>
        <port_device>cortex_a8</port_device>
        <port_device>cortex_a9</port_device>
        <port_device>cortex_a15</port_device>
        <port_device>cortex_m0</port_device>
        <port_device>cortex_m3</port_device>
        <port_device>cortex_m4</port_device>
        <port_device>cortex_m7</port_device>
        <port_device>cortex_r4</port_device>
        <port_device>cortex_r5</port_device>
    </port_devices> 

	<vendor>Microsoft</vendor>
	<name>AzureRTOS-USBX</name>
	<description>CMSIS-Pack for Azure RTOS USBX</description>
	<url>https://github.com/azure-rtos/cmsis-packs/</url>

	<releases>
		<release version="1.0.0" date="2023-03-20">
			Initial release of Azure RTOS USBX CMSIS-PACK.
            - Based on Azure RTOS USBX release v6.2.0.
            - Included usbx common core, usbx_device_classes, usbx_host_classes, usbx_host_controllers, usbx_network, and usbx_pictbridge.
            - Support Cortex-M0/M3/M4/M7
            - Support Cortex-A5/A7/A8/A9/A15
            - Support Cortex-R4/R5
		</release>
	</releases>
  
    <keywords>
        <keyword>Microsoft</keyword>
        <keyword>Azure RTOS</keyword>
		<keyword>USBX</keyword>
    </keywords>

    <conditions>
    </conditions>

    <components>
        <bundle Cbundle="USBX" Cclass="USB" Cversion="6.2.0">
            <description>Azure RTOS USBX bundle.</description>
            <doc>../README.md</doc>
        </bundle>
    </components>

</package>